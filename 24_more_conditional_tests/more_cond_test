//Test using "and" and 'or' operators
console.log(`\n Test using "and" and 'or' operators`)
num10 = 23
num11 = 43
num12 = 23
num13 = 78
console.log(`num10 = ${num10}, num11 = ${num11}, num12 = ${num12}, num13 = ${num13}`)
if (num10 == num11 && num12 == num13){
  console.log(`All the four numbers are equal`)
}else 
  console.log(`Not All the four numbers are equal`)

if (num10 == num12 || num11 == num13){
  console.log(`Only Num10 and Num12 are identical`)
}else 
  console.log(`No any identical pair `)

