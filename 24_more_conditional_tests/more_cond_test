//Test of equality and inequality with strings
let car = 'Suzuki'
console.log(`Is car == 'Suzuki' | predict true?`)
console.log(car == "Suzuki")
console.log(car =="Honda")

//Tests using the lower case function
let lowerCase = "PAKISTAN"
console.log("Test that string is lower")
if (lowerCase == lowerCase.toLowerCase()){
    console.log(true)
} else
    console.log(false)

//Tests using the upper case function
console.log[(`\n Tests using the upper case function`)]
let upperCase = "PAKISTAN"
console.log("Test that string is Upper")
if (lowerCase == lowerCase.toUpperCase()){
    console.log(true)
} else
    console.log(false+"\n")

//Number Test equality and inequality
console.log(`\n Number Test equality and inequality`)
let num1 = 3
let num2 = 4
console.log("Number test - equality and inequality")
console.log(`number 1 and number2 are equal = ${num1==num2}`)

//Number Test greater than or less than
console.log(`\n Number Test greater than or less than`)
let num3 = 100
let num4 = 154
console.log("Number test - greater than or less than")
if (num3 > num4){
    console.log(`number3 is greater than number4`)
}else
    console.log(`No! number4 is greater`)


//Number Test greater than or equal to 
